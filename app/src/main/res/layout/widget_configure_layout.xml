<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    <include
            android:id="@+id/widget_preview"
            layout="@layout/widget_board_layout"
            android:layout_width="match_parent"
            android:layout_height="128dp" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/widget_preview"
            android:orientation="vertical">

        <Spinner
                android:id="@+id/board_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp" />

        <EditText
                android:id="@+id/board_title_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:editable="false"
                android:paddingLeft="12dp"
                android:text="@string/widget_configure_board_title_color"
                android:textSize="16dp" />

        <CheckBox
                android:id="@+id/show_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/widget_configure_board" />

        <CheckBox
                android:id="@+id/rounded_corners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/widget_configure_corners" />

        <CheckBox
                android:id="@+id/show_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/widget_configure_refresh" />

        <CheckBox
                android:id="@+id/show_configure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="@string/widget_configure_config" />

    </LinearLayout>

    <Button
            android:id="@+id/done"
            style="@style/WidgetConfigureOkButton" />

</RelativeLayout>